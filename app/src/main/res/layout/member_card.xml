<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/user_pic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ligers_claw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:siBorderColor="#000000"
            app:siBorderWidth="1sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/user_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname, First name Middle name"
            android:layout_below="@+id/user_pic"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:layout_below="@+id/user_fullname"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"
            android:layout_below="@+id/user_position"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/divider">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/view_info"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                fancy:fb_defaultColor="#FFFFFF"
                fancy:fb_focusColor="#E1E1E1"
                fancy:fb_text=""/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/delete_info"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                fancy:fb_defaultColor="#FFFFFF"
                fancy:fb_focusColor="#E1E1E1"
                fancy:fb_text=""/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/send_sms"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                fancy:fb_defaultColor="#FFFFFF"
                fancy:fb_focusColor="#E1E1E1"
                fancy:fb_text=""/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>