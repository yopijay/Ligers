<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="50dp"
            android:orientation="vertical">
    
            <TextView
                android:id="@+id/dashboard_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_txt"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/textTitle"
                android:textAllCaps="true"
                tools:targetApi="o" />
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                tools:targetApi="o">
    
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    tools:targetApi="o"
                    card_view:cardBackgroundColor="@color/backgroundBlue"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="10dp">
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
    
                        <TextView
                            android:id="@+id/month_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_txt"
                            android:textColor="@color/textWhite"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"/>
    
                        <TextView
                            android:id="@+id/month_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/month_title"
                            android:text="@string/month_value"
                            android:textColor="@color/textWhite"
                            android:layout_centerHorizontal="true"/>
    
                    </RelativeLayout>
    
                </androidx.cardview.widget.CardView>
    
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    tools:targetApi="o"
                    card_view:cardBackgroundColor="@color/backgroundWhite"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="10dp">
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
    
                        <TextView
                            android:id="@+id/day_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_txt"
                            android:textColor="@color/textLink"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"/>
    
                        <TextView
                            android:id="@+id/day_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/day_title"
                            android:text="@string/day_value"
                            android:textColor="@color/textTitle"
                            android:layout_centerHorizontal="true"/>
    
                    </RelativeLayout>
    
                </androidx.cardview.widget.CardView>
    
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    tools:targetApi="o"
                    card_view:cardBackgroundColor="@color/backgroundWhite"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="10dp">
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
    
                        <TextView
                            android:id="@+id/year_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/year_txt"
                            android:textColor="@color/textLink"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"/>
    
                        <TextView
                            android:id="@+id/year_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/year_title"
                            android:text="@string/year_value"
                            android:textColor="@color/textTitle"
                            android:layout_centerHorizontal="true"/>
    
                    </RelativeLayout>
    
                </androidx.cardview.widget.CardView>
    
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        tools:targetApi="o">

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="130dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            tools:targetApi="o"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="2dp"
                            card_view:cardBackgroundColor="@color/backgroundWhite">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@color/backgroundRed"/>

                                <TextView
                                    android:id="@+id/attendance_title_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/attendance_txt"
                                    android:layout_marginVertical="7dp"
                                    android:layout_marginHorizontal="15dp"
                                    android:textColor="@color/textRed"
                                    tools:targetApi="o"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="130dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            card_view:cardBackgroundColor="@color/backgroundWhite"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="3dp"
                            tools:targetApi="o" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@color/backgroundGreen"/>

                                <TextView
                                    android:id="@+id/funds_title_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/funds_txt"
                                    android:layout_marginVertical="7dp"
                                    android:layout_marginHorizontal="15dp"
                                    android:textColor="@color/textGreen"
                                    tools:targetApi="o"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="130dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            tools:targetApi="o"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="3dp"
                            card_view:cardBackgroundColor="@color/backgroundWhite">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@color/backgroundYellow"/>

                                <TextView
                                    android:id="@+id/member_title_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/members_txt"
                                    android:layout_marginVertical="7dp"
                                    android:layout_marginHorizontal="15dp"
                                    android:textColor="@color/textYellow"
                                    tools:targetApi="o"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>
    
        </LinearLayout>

    </ScrollView>

</RelativeLayout>