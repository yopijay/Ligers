<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members_txt"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/textTitle"
            android:textAllCaps="true"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="@color/backgroundWhite"
                card_view:contentPaddingTop="10dp"
                card_view:contentPaddingBottom="10dp"
                card_view:contentPaddingRight="5dp"
                card_view:contentPaddingLeft="5dp"
                tools:targetApi="o">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_female"/>

                    <TextView
                        android:id="@+id/flyer_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female_txt"
                        android:textColor="@color/textLink"
                        android:textAllCaps="true"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="@color/backgroundWhite"
                card_view:contentPaddingTop="10dp"
                card_view:contentPaddingBottom="10dp"
                card_view:contentPaddingRight="5dp"
                card_view:contentPaddingLeft="5dp"
                tools:targetApi="o">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_male"/>

                    <TextView
                        android:id="@+id/lifter_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male_txt"
                        android:textColor="@color/textLink"
                        android:textAllCaps="true"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>